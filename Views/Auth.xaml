<Page x:Class="DemExamFTest.Views.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemExamFTest.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid Background="White">
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите логин"/>
            <TextBox Text=""  x:Name="txbLogin"/>
            <Label Content="Введите пароль"/>
            <PasswordBox  x:Name="psbPassword"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Регистрация" x:Name="BtnReg"  Click="BtnReg_Click"/>
                <Button Content="Войти" x:Name="btnIn" Click="btnIn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
